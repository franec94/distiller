# Train Scripts
# -----------------
RUN_PROGRAM = run_program.sh
RUN_PROGRAM = run_program_siren_app.sh

RUN_PROGRAM_APP = run_program_siren_app.sh
TEST_RUN_PROGRAM = test_run_program_siren_app.sh

# Quant scripts
# -----------------
RUN_PROGRAM_PTQ = run_program_siren_app_ptq.sh
RUN_PROGRAM_QUANT_AWARE = run_program_siren_app_quant_aware.sh

# Prune scripts
# -----------------
RUN_PROGRAM_AGP_PRUNE = run_program_siren_app_pruning_agp.sh

# Fine-Tune scripts
# -----------------
RUN_PROGRAM_FINE_TUNE_TMP = run_program_siren_app_tmp.sh


# =============================================== #
# Makefile_2 - Targets:
# =============================================== #

run_program_train_on_cameramen:
	clear
	chmod u+x $(RUN_PROGRAM)
	./$(RUN_PROGRAM)


run_program_siren_app_train_on_cameramen:
	clear
	chmod u+x $(RUN_PROGRAM_APP)
	./$(RUN_PROGRAM_APP)


# Pruning tasks
# --------------------------------- #
siren_app_Train_on_Cameramen_AGP_prune:
	clear
	chmod u+x $(RUN_PROGRAM_AGP_PRUNE)
	./$(RUN_PROGRAM_AGP_PRUNE)


# Quantization tasks
# --------------------------------- #
siren_app_Train_on_Cameramen_QAT:
	clear
	chmod u+x $(RUN_PROGRAM_QUANT_AWARE)
	./$(RUN_PROGRAM_QUANT_AWARE)


# Test tasks
# --------------------------------- #
siren_app_Test_on_Cameramen:
	clear
	chmod u+x $(TEST_RUN_PROGRAM)
	./$(TEST_RUN_PROGRAM)


# Install dependencies tasks
# --------------------------------- #
install_distiller_dependencies_via_requirements_file:
	clear
	pip install -r requirements.txt


# Fine tune tasks
# --------------------------------- #
siren_app_Train_on_Cameramen_Fine_tune:
	clear
	chmod u+x $(RUN_PROGRAM_FINE_TUNE_TMP)
	./$(RUN_PROGRAM_FINE_TUNE_TMP)


# Post-Train-Quant Test tasks
# --------------------------------- #
siren_app_Test_on_Cameramen_PTQ:
	clear
	chmod u+x $(RUN_PROGRAM_PTQ)
	./$(RUN_PROGRAM_PTQ)
