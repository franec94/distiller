# Train Scripts
# -------------
RUN_PROGRAM = run_program.sh
RUN_PROGRAM = run_program_siren_app.sh

RUN_PROGRAM_APP = run_program_siren_app.sh
TEST_RUN_PROGRAM = test_run_program_siren_app.sh

# Quant scripts
# -------------
